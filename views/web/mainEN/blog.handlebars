<section class="header-title">
    <div class="container">
        <div class="row">
            <div class="title">
                <h2>{{categoryName}}</h2>
            </div>
        </div>
    </div>
</section>
<section class="news-section">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <div class="news-wraper">
                    {{#each blog}}
                    <div class="col-md-6">
                        <div class="news-box">
                            <div class="img-box">
                                <img class="img-thumbnail" src="{{blogImage}}" />
                            </div>
                            <div class="text-box">
                                <div class="header">
                                    <h4>{{blogName}}</h4>
                                    <p>
                                        {{moment date}}
                                    </p>
                                </div>
                                <div class="text">
                                    <p>
                                        {{toText blogDesc}}
                                    </p>
                                    <a href="/muhendislik-makina/blog/{{_id}}">Read more</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="col-md-3">
                <aside class="blog-info">
                    <div class="search-box">
                        <div class="form-group">

                            <input class="form-control" placeholder="Search" id="searchInput" oninput="newBlogSearch();"
                                type="input" />
                        </div>
                    </div>
                    <div class="category-widget">
                        <div class="title">
                            <h4>Categories</h4>
                        </div>
                        <ul>
                            {{#each category}}
                            <li>
                                <a href="/engineering-machinery/{{_id}}">{{categoryNameEN}}</a>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="news-widget">
                        <div class="title">
                            <h4>Popular Articles</h4>
                        </div>
                        <div class="news-item">
                            <figure>
                                <img src="img/blog-thumbnail.jpg" alt="">
                            </figure>
                            <div class="text-box">
                                <h5><a href=""> How Advanced Manufactoring is Transforming the FACTORY</a></h5>
                                <p>
                                    October 21, 2016
                                </p>
                            </div>
                        </div>
                        <div class="news-item">
                            <figure>
                                <img src="img/blog-thumbnail2.jpg" alt="">
                            </figure>
                            <div class="text-box">
                                <h5><a href=""> How Advanced Manufactoring is Transforming the FACTORY </a></h5>
                                <p>
                                    October 21, 2016
                                </p>
                            </div>
                        </div>
                        <div class="news-item">
                            <figure>
                                <img src="img/blog-thumbnail3.jpg" alt="">
                            </figure>
                            <div class="text-box">
                                <h5><a href=""> How Advanced Manufactoring is Transforming the FACTORY </a></h5>
                                <p>
                                    October 21, 2016
                                </p>
                            </div>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </div>
</section>